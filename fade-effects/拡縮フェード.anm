--track0:ŠÔ,0,10,0,0.1
--track1:IN•ûŒü,0,1,0,1
--track2:OUT•ûŒü,0,1,0,1

if (obj.time < obj.track0) then
	local ratio = 1 - obj.time / obj.track0
	obj.alpha = 1 - ratio
	if (obj.track1 == 0) then
		obj.aspect = -ratio
	else
		obj.aspect = ratio
	end
elseif (obj.totaltime - obj.time < obj.track0) then
	local ratio = 1 - (obj.totaltime - obj.time) / obj.track0
	obj.alpha = 1 - ratio
	if (obj.track1 == 0) then
		obj.aspect = -ratio
	else
		obj.aspect = ratio
	end
end
